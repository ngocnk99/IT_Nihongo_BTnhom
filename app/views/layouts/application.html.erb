<!DOCTYPE html>
<html>

<head>
  <title>Thefirstrails</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  <nav class="navbar navbar-expand-lg navbar-light bg-light header_main">
    <a class="navbar-brand" href="/">BOOK REVIEW</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
   <div class="none2">
       <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to current_user.name  , users_show_path, :class => "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "サインアウト", destroy_user_session_path, method: :delete, :class => "nav-link"%>
        </li>
        <%else%>
        <li class="nav-item">
          <%= link_to "サインイン", new_user_session_path, :class => "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ユーザ登録", new_user_registration_path, :class => "nav-link" %>
        </li>
        <% end%>
      </ul>
   </div>
 <div class="collapse navbar-collapse " id="navbarSupportedContent">
